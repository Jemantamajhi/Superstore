@{
    ViewData["Title"] = "Category and Subcategory";
    Layout = "_AdminLayout";
}

<main class="main" id="main">
    <div class="container">
        <h1>Category and Subcategory</h1>
        <div class="row">
            <div class="col-md-6">
                <h2>Categories</h2>
                <div class="table-responsive">
                    <table class="table table-striped" id="categoryTable">
                        <thead>
                            <tr>
                                <th>Category</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <tr>
                                    <td>@category.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a asp-action="AddCategory" asp asp-controller="admin" class="btn btn-primary">Add More Category</a>
            </div>
            <div class="col-md-6">
                <h2>Subcategories</h2>
                <div class="table-responsive">
                    <table class="table table-striped" id="subcategoryTable">
                        <thead>
                            <tr>
                                <th>Subcategory</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subcategory in ViewBag.Subcategories)
                            {
                                <tr>
                                    <td>@subcategory.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a asp-action="CreateSubCategory" asp asp-controller="admin" class="btn btn-primary">Add More Sub Category</a>
            </div>
        </div>
    </div>
</main>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">

<!-- Include DataTables JavaScript -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#categoryTable').DataTable();
        $('#subcategoryTable').DataTable();
    });
</script>
