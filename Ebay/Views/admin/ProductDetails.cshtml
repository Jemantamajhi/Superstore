@model List<Ebay.Models.Product>;
@{
    Layout = "_AdminLayout";
}

<main class="main" id="main">
    <div class="container">
        <div class="table-responsive table-container">
            <table class="table" id="productTable">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Action</th>
                        <th>Action</th> <!-- Added another Action column for Delete -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>
                                <img src="~/Image/@item.ImagePath" asp-append-version="true" class="img-fluid">
                            </td>
                            <td>@item.Price</td>
                            <td>@item.Description</td>
                            <td>
                               @*  <a href="@Url.Action("ProductEdit", "admin", new { id = item.ProductId })" class="btn btn-primary">Edit</a> *@
                            </td>
                            <td>
                                @* <a class="btn btn-danger" asp-action="Delete" asp-controller="Category">Delete</a> *@
                                <form asp-action="PDelete" asp-controller="admin" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</button>
                                </form>
                            </td>
                            <!-- Delete Button -->
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="container">
        <div class="row pagination-container">
            <div class="col-auto">
                <a asp-action="Dashboard" asp-controller="admin" class="btn btn-primary">&larr; Back to Dashboard</a>
            </div>
           
        </div>
    </div>
</main>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">

<!-- Include DataTables JavaScript -->
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function() {
        $('#productTable').DataTable();
    });
</script>
