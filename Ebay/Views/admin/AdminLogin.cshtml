<!DOCTYPE html>
<html>
<head>
    <title>Admin Login</title>
    <!-- Adjust the path to your CSS file -->
    <link rel="stylesheet" type="text/css" href="~/Admin/AdminLogin/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <!-- Adjust the path to your image files -->
    <img class="wave" src="~/Admin/AdminLogin/img/wave.png">
    <div class="container">
        <div class="img">
            <!-- Adjust the path to your image files -->
            <img src="~/Admin/AdminLogin/img/bg.svg">
        </div>
        <div class="login-content">
            <form asp-action="AdminLogin" asp-controller="Admin" method="post">
                <!-- Display error message if TempData contains "AdminMessage" -->
                @if (TempData["AdminMessage"] != null)
                {
                    <p style="color: red;">@TempData["AdminMessage"]</p>
                }
                <!-- Adjust the path to your image files -->
                <img src="~/Admin/AdminLogin/img/avatar.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <!-- Use Razor tag helpers for input fields -->
                        <input type="text" asp-for="Username" class="input">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <!-- Use Razor tag helpers for input fields -->
                        <input type="password" asp-for="Password" class="input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Adjust the path to your JavaScript file -->
    <script type="text/javascript" src="~/Admin/AdminLogin/js/main.js"></script>
</body>
</html>
@section scripts{
    <script>
        function preventback(){
            window, history.forward();
        }
        setTimeout("preventback()");
        window.onunload = function () {
            null
        };
    </script>
}


