@model List<Ebay.Models.Customer>;
@{
    ViewData["Title"] = "CustomersFetch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main class="main" id="main">
    <div class="container">
        <div class="pagetitle">
            <h1>Customers</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped" id="tbllist">
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        <th>Name</th>
                     <th>MobileNo</th>
                        <th>Country</th>
                        <th>City</th>
                        <th>State</th>
                        <td>Region</td>
                        <th>Actions</th>
                        <!-- Add more columns as needed -->
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var customer = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@customer.CustomerName</td>
                            <td>@customer.MobileNo</td>
                            <td>@customer.Country</td>
                            <td>@customer.City</td>
                            <td>@customer.State</td>
                            <td>
                                <!-- Edit Button -->
                                <a href="@Url.Action("Edit", "admin", new { id = customer.CustomerId })" class="btn btn-primary">Edit</a>
                                <!-- Delete Button -->
                                <form asp-action="Delete" asp-controller="admin" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@customer.CustomerId" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Include jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- Include DataTables CSS -->
        <link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.dataTables.css" />

        <!-- Include DataTables JavaScript -->
        <script src="https://cdn.datatables.net/2.0.2/js/dataTables.js"></script>

        <script type="text/javascript">
            var js = jQuery.noConflict(true);
            js(document).ready(function () {
                js('#tbllist').DataTable({

                });
            });
        </script>
    </div>
</main>
